# Auto-detect text files and normalize line endings
* text=auto

# Enforce LF line endings for source and configuration files
*.cs     text eol=lf
*.xaml   text eol=lf
*.csproj text eol=lf
*.sln    text eol=lf
*.props  text eol=lf
*.targets text eol=lf
*.config text eol=lf
*.json   text eol=lf
*.xml    text eol=lf
*.yml    text eol=lf
*.md     text eol=lf
*.txt    text eol=lf

# Use CRLF for Windows batch scripts
*.bat    text eol=crlf

# Use LF for shell and PowerShell scripts
*.sh     text eol=lf
*.ps1    text eol=lf

# Treat the following file types as binary to avoid diff/merge issues
*.dll    binary
*.exe    binary
*.pdb    binary
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.ttf    binary
*.otf    binary
*.eot    binary
*.woff   binary
*.woff2  binary

# Visual Studio user-specific files (binary)
*.suo    binary
*.user   binary
*.userosscache binary
*.sln.docstates binary

# Improve diffing for source files
*.cs     diff=csharp
*.xaml   diff

# Optional: Treat generated designer files as text with LF endings
*.g.cs    text eol=lf
*.g.i.cs  text eol=lf
*.i.cs    text eol=lf
